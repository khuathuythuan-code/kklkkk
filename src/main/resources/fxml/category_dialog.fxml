<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="categoryDialogPane" prefHeight="300" prefWidth="400" stylesheets="@/css/category-dialog.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.ExpenseTracker.controller.CategoryController">
    <children>
        <Label fx:id="title" layoutX="20" layoutY="10" style="-fx-font-size:16; -fx-font-weight:bold;" />
        <VBox layoutX="20" layoutY="40" prefHeight="220" prefWidth="360" spacing="8">
            <children>
                <ListView fx:id="categoryList" prefHeight="140" />
                <HBox spacing="8">
                    <children>
                        <TextField fx:id="newCategoryField" />
                        <ComboBox fx:id="typeCombo"  prefHeight="25.0" prefWidth="120" />
                        <Button fx:id="addCate" prefHeight="25.0" prefWidth="100.0" />
                    </children>
                </HBox>
                <HBox spacing="8">
                    <children>
                        <Button fx:id="deleteCate" />
                        <Button fx:id="closeDialog" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="6" left="6" right="6" top="6" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
