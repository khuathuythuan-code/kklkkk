<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<StackPane fx:id="loginPane" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ExpenseTracker.controller.LoginController"
            stylesheets="@/css/login.css">

    <VBox alignment="CENTER" spacing="35">

        <Label fx:id="title"
               style="-fx-text-fill: white; -fx-font-size: 40; -fx-font-weight: bold;"/>

        <VBox fx:id="loginContentContainer" alignment="CENTER" spacing="20"
              style="
                     -fx-padding: 30 40 35 40;
                     -fx-background-radius: 12;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 10, 0, 0, 2);
                     -fx-min-width: 380;
                     -fx-max-width: 420;">

            <!-- TÃªn Ä‘Äƒng nháº­p -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="userNameLabel" style="-fx-text-fill: #cccccc;"/>
                <TextField fx:id="usernameField"
                           style="-fx-background-color: #2C2C2C;
                                  -fx-text-fill: white;
                                  -fx-background-radius: 8;
                                  -fx-border-color: transparent;
                                  -fx-pref-height: 34;"/>
            </VBox>

            <!-- Máº­t kháº©u -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="passwordLabel" style="-fx-text-fill: #cccccc;"/>
                <PasswordField fx:id="passwordField"
                               style="-fx-background-color: #2C2C2C;
                                      -fx-text-fill: white;
                                      -fx-background-radius: 8;
                                      -fx-border-color: transparent;
                                      -fx-pref-height: 34;"/>
            </VBox>

            <!-- Buttons -->
            <VBox spacing="12" alignment="CENTER">

                <Button fx:id="loginBtn"
                        onAction="#onLogin"
                        style="-fx-background-color: linear-gradient(to right, #A93AFF, #FF6FD8);
-fx-text-fill: white;
-fx-font-weight: bold;
-fx-background-radius: 8;
-fx-pref-width: 180;
-fx-pref-height: 38;
-fx-effect: dropshadow(gaussian, rgba(255,110,220,0.4), 10, 0.3, 0, 2);
"/>

                <Button fx:id="switchToRegisterBtn"
                        onAction="#changeScene"
                        style="-fx-background-color: transparent;
-fx-text-fill: linear-gradient(to right, #A93AFF, #FF6FD8);

-fx-font-weight: bold;
-fx-cursor: hand;
-fx-underline: false;
"/>
            </VBox>
        </VBox>

        <Button fx:id="languageBtn" text="ðŸŒ NgÃ´n ngá»¯ / Language"
                style="-fx-background-color: #1A1A1A;
-fx-text-fill: #BBB;
-fx-border-color: #444;
-fx-border-radius: 8;
-fx-background-radius: 8;
-fx-pref-width: 180;
-fx-pref-height: 30;
"/>
    </VBox>
</StackPane>
