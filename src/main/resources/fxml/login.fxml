<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ExpenseTracker.controller.LoginController"
           style="-fx-background-color: #121212; -fx-font-family: 'Segoe UI';">

    <VBox alignment="CENTER" spacing="35">

        <Label fx:id="title"
               style="-fx-text-fill: white; -fx-font-size: 40; -fx-font-weight: bold;"/>

        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: #1E1E1E;
                     -fx-padding: 30 40 35 40;
                     -fx-background-radius: 12;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 10, 0, 0, 2);
                     -fx-min-width: 380;
                     -fx-max-width: 420;">

            <!-- TÃªn Ä‘Äƒng nháº­p -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="userNameLabel" style="-fx-text-fill: #cccccc;"/>
                <TextField fx:id="usernameField"
                           style="-fx-background-color: #2C2C2C;
                                  -fx-text-fill: white;
                                  -fx-background-radius: 8;
                                  -fx-border-color: transparent;
                                  -fx-pref-height: 34;"/>
            </VBox>

            <!-- Máº­t kháº©u -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="passwordLabel" style="-fx-text-fill: #cccccc;"/>
                <PasswordField fx:id="passwordField"
                               style="-fx-background-color: #2C2C2C;
                                      -fx-text-fill: white;
                                      -fx-background-radius: 8;
                                      -fx-border-color: transparent;
                                      -fx-pref-height: 34;"/>
            </VBox>

            <!-- Buttons -->
            <VBox spacing="12" alignment="CENTER">

                <Button fx:id="loginBtn"
                        onAction="#onLogin"
                        style="-fx-background-color: #2ecc71;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 8;
                               -fx-pref-width: 180;
                               -fx-pref-height: 38;"/>

                <Button fx:id="switchToRegisterBtn"
                        onAction="#changeScene"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #2ecc71;
                               -fx-font-weight: bold;
                               -fx-cursor: hand;"/>
            </VBox>
        </VBox>

        <Button fx:id="languageBtn" text="ðŸŒ NgÃ´n ngá»¯ / Language"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #888;
                       -fx-border-color: #333;
                       -fx-border-radius: 8;
                       -fx-background-radius: 8;
                       -fx-pref-width: 180;
                       -fx-pref-height: 30;"/>
    </VBox>
</StackPane>
