<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="transactionDetailPane" prefHeight="400" prefWidth="600" stylesheets="@/css/transaction-detail.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ExpenseTracker.controller.TransactionDetailController">
    <children>
        <Label fx:id="titleLabel" layoutX="220" layoutY="10" style="-fx-font-size: 18; -fx-font-weight: bold;" />
        <Label fx:id="moneyLabel" layoutX="40" layoutY="60" />
        <TextField fx:id="inputMoneyField" layoutX="100" layoutY="56" prefWidth="160" />
        <Label fx:id="dateLabel" layoutX="280" layoutY="60" />
        <DatePicker fx:id="inputDateField" layoutX="330" layoutY="56" />
        <HBox layoutX="40.0" layoutY="106.0" spacing="10.0">
            <Label fx:id="categoryLabel" layoutX="40" layoutY="110" />
            <TextField fx:id="categoryField" layoutX="100" layoutY="106" prefWidth="220" />
        </HBox>
        <Label fx:id="noteLabel" layoutX="40" layoutY="160" />
        <TextArea fx:id="inputNoteField" layoutX="100" layoutY="156" prefHeight="120" prefWidth="420" />

        <Button fx:id="updateBtn" layoutX="140" layoutY="300" onAction="#updateTransaction" prefWidth="100" />
        <Button fx:id="deleteBtn" layoutX="260" layoutY="300" onAction="#deleteTransaction" prefWidth="100" />
        <Button fx:id="closeBtn" layoutX="380" layoutY="300" onAction="#closeWindow" prefWidth="100" />
    </children>
</AnchorPane>
