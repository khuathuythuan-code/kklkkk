<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="chartPane" xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ExpenseTracker.controller.ChartController"
           >

    <!-- ===== TOP: CHỌN THÁNG - NĂM ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20 30;">
            <VBox spacing="4">
                <Label fx:id="monthComboBoxLabel" style="-fx-text-fill: white;" />
                <ComboBox fx:id="statsMonthComboBox" prefWidth="130" prefHeight="30"
                          style="-fx-background-radius: 8;"/>
            </VBox>

            <VBox spacing="4">
                <Label fx:id="yearComboBoxLabel" style="-fx-text-fill: white;" />
                <ComboBox fx:id="statsYearComboBox" prefWidth="130" prefHeight="30"
                           style="-fx-background-radius: 8;"/>
            </VBox>

            <Pane HBox.hgrow="ALWAYS" />

            <Button fx:id="yearToggleBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 16;" />
            <Button fx:id="monthToggleBtn" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 16;" />
        </HBox>
    </top>

    <!-- ===== CENTER: 3 CHỈ SỐ & BIỂU ĐỒ ===== -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 10 20;">

            <!-- BOX 3 CHỈ SỐ -->
            <HBox alignment="CENTER" spacing="20">
                <VBox fx:id="expenseStatsContainer" alignment="CENTER" spacing="6" style=" -fx-padding: 12 20; -fx-background-radius: 10;">
                    <Label fx:id="expenseAboveLabel" style="-fx-text-fill:#b8ffa8;" />
                    <Label fx:id="expenseLabel" text="0" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 18;" />
                </VBox>

                <VBox fx:id="incomeStatsContainer" alignment="CENTER" spacing="6" style=" -fx-padding: 12 20; -fx-background-radius: 10;">
                    <Label fx:id="incomeAboveLabel" style="-fx-text-fill:#ffabab;" />
                    <Label fx:id="incomeLabel" text="0" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 18;" />
                </VBox>

                <VBox fx:id="totalStatsContainer" alignment="CENTER" spacing="6" style=" -fx-padding: 12 20; -fx-background-radius: 10;">
                    <Label fx:id="totalAboveLabel" style="-fx-text-fill:#a8c8ff;" />
                    <Label fx:id="totalLabel" text="0" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 18;" />
                </VBox>
            </HBox>

            <!-- PIE CHARTS -->
            <HBox alignment="CENTER" spacing="25">
                <PieChart fx:id="expensePieChart" legendVisible="false" prefWidth="380" prefHeight="320"
                          style=" -fx-background-radius: 12; -fx-padding: 15;" />
                <PieChart fx:id="revenuePieChart" legendVisible="false" prefWidth="380" prefHeight="320"
                          style=" -fx-background-radius: 12; -fx-padding: 15;" />
            </HBox>

            <!-- BAR CHART -->
            <BarChart fx:id="barChart" prefWidth="780" prefHeight="320" titleSide="TOP"
                      style=" -fx-background-radius: 12; -fx-padding: 10;">
                <xAxis>
                    <CategoryAxis fx:id="barXAxis" label="Tháng" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="barYAxis" label="Số tiền" />
                </yAxis>
            </BarChart>
        </VBox>
    </center>

    <!-- ===== BOTTOM MENU ===== -->
    <bottom>
        <HBox fx:id="chartNavBar" alignment="CENTER" spacing="60" >
            <Button fx:id="btnHome" onAction="#changeScene" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button fx:id="btnHistory" onAction="#changeScene" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button fx:id="btnReport" onAction="#changeScene" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button fx:id="btnSettings" onAction="#changeScene" style="-fx-background-color: transparent; -fx-text-fill: white;" />
        </HBox>
    </bottom>
</BorderPane>
