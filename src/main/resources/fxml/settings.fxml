<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="settingPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ExpenseTracker.controller.SettingsController"
stylesheets="@/css/setting.css">

    <!-- ======= TOP ======= -->
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20 40;">
            <Label fx:id="titleLabel"
                   style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- ======= CENTER ======= -->
    <center>
        <VBox spacing="40" alignment="TOP_CENTER"
              style="-fx-padding: 40 40 0 40;"> <!-- thêm padding-top để kéo cụm tùy chọn lên -->

            <!-- ===== CỤM TÙY CHỌN ===== -->
            <VBox spacing="15" alignment="CENTER" prefWidth="400">

                <!-- Chế độ giao diện -->
                <HBox fx:id="themeOptionLabelContainer" alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-radius: 8; -fx-padding: 10 15;">
                    <Label fx:id="themeOptionLabel"
                           style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <ToggleButton fx:id="themeToggle" />
                </HBox>

                <!-- Ngôn ngữ -->
                <HBox fx:id="languageOptionLabelContainer" alignment="CENTER_LEFT" spacing="10"
                      style=" -fx-background-radius: 8; -fx-padding: 10 15;">
                    <Label fx:id="languageOptionLabel"
                           style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <ComboBox fx:id="btnChangeLanguage"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" />
                </HBox>

                <!-- Đổi mật khẩu -->
                <HBox fx:id="changePasswordLabelContainer" alignment="CENTER_LEFT" spacing="10"
                      style=" -fx-background-radius: 8; -fx-padding: 10 15;">
                    <Label fx:id="changePasswordLabel"
                           style="-fx-text-fill: white; -fx-font-size: 14;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnChangePassword" text=">"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" />
                </HBox>
            </VBox>

            <!-- ===== NÚT ĐĂNG XUẤT ===== -->
            <Button fx:id="btnLogout"
                    />
        </VBox>
    </center>

    <!-- ======= BOTTOM MENU ======= -->
    <bottom>
        <HBox fx:id="settingNavBar" spacing="60" alignment="CENTER">
            <Button fx:id="btnHome"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    onAction="#changeScene"/>

            <Button fx:id="btnHistory"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    onAction="#changeScene"/>

            <Button fx:id="btnReport"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    onAction="#changeScene"/>

            <Button fx:id="btnSettings"
                    style="-fx-background-color: transparent; -fx-text-fill: white;"
                    onAction="#changeScene"/>
        </HBox>
    </bottom>

</BorderPane>
