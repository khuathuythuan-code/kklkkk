<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #121212;">

    <center>
        <VBox alignment="TOP_CENTER" spacing="25"
              maxWidth="750"
              style="-fx-background-color: #1e1e1e;
                     -fx-background-radius: 12;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 20, 0.25, 0, 4);">

            <padding>
                <Insets top="30" bottom="30" left="35" right="35"/>
            </padding>

            <!-- HEADER -->
            <HBox alignment="CENTER_LEFT" spacing="10" maxWidth="650">
                <Label text="Danh sách tiết kiệm"
                       style="-fx-text-fill: white;
                              -fx-font-size: 28;
                              -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="X"
                        prefWidth="30" prefHeight="30"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #bbbbbb;
                               -fx-font-size: 20;"/>
            </HBox>

            <Separator style="-fx-background-color: #444;" maxWidth="650"/>

            <!-- Tiến độ -->
            <VBox alignment="CENTER_LEFT" spacing="10" maxWidth="650">
                <Label text="Tiến độ tổng:"
                       style="-fx-text-fill: #dddddd; -fx-font-size: 17;"/>
                <ProgressBar progress="0.45" prefWidth="650"
                             style="-fx-accent: #2ecc71;"/>
            </VBox>

            <Label text="Các mục tiết kiệm"
                   style="-fx-text-fill: #aaaaaa; -fx-font-size: 15;"/>

            <!-- SCROLL CHO DANH SÁCH -->
            <ScrollPane fitToWidth="true"
                        maxHeight="300"
                        hbarPolicy="NEVER"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <content>
                    <VBox spacing="15" maxWidth="650">

                        <!-- ITEM 1 -->
                        <HBox spacing="20" alignment="CENTER_LEFT"
                              style="-fx-background-color: #2b2b2b;
                                     -fx-padding: 15 20;
                                     -fx-background-radius: 10;">
                            <VBox spacing="8">
                                <Label text="Mua xe máy"
                                       style="-fx-text-fill: white;
                                              -fx-font-size: 16;
                                              -fx-font-weight: bold;"/>
                                <ProgressBar progress="0.6" prefWidth="420"
                                             style="-fx-accent: #2ecc71;"/>
                            </VBox>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <Label text="6.000.000 / 10.000.000"
                                   style="-fx-text-fill: #cccccc; -fx-font-size: 13;"/>
                        </HBox>

                        <!-- ITEM 2 -->
                        <HBox spacing="20" alignment="CENTER_LEFT"
                              style="-fx-background-color: #2b2b2b;
                                     -fx-padding: 15 20;
                                     -fx-background-radius: 10;">
                            <VBox spacing="8">
                                <Label text="Du lịch Đà Lạt"
                                       style="-fx-text-fill: white;
                                              -fx-font-size: 16;
                                              -fx-font-weight: bold;"/>
                                <ProgressBar progress="0.3" prefWidth="420"
                                             style="-fx-accent: #2ecc71;"/>
                            </VBox>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <Label text="3.000.000 / 10.000.000"
                                   style="-fx-text-fill: #cccccc; -fx-font-size: 13;"/>
                        </HBox>

                    </VBox>
                </content>
            </ScrollPane>

            <!-- NÚT THÊM MỚI (tách riêng hẳn dưới) -->
            <Button text="Thêm mục mới"
                    style="-fx-background-color: #2ecc71;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-font-size: 16;
                           -fx-background-radius: 10;
                           -fx-padding: 12 40;"/>

        </VBox>
    </center>
</BorderPane>
