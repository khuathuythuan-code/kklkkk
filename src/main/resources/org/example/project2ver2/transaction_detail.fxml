<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project2ver2.controller.TransactionDetailController">
    <children>
        <Label layoutX="220" layoutY="10" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Chi tiết giao dịch" />
        <Label layoutX="40" layoutY="60" text="Tiền:" />
        <TextField fx:id="inputMoneyField" layoutX="100" layoutY="56" prefWidth="160" />
        <Label layoutX="280" layoutY="60" text="Ngày:" />
        <DatePicker fx:id="inputDateField" layoutX="330" layoutY="56" />
        <Label layoutX="40" layoutY="110" text="Danh mục:" />
        <ComboBox fx:id="categoryCombo" layoutX="100" layoutY="106" prefWidth="220" />
        <Label layoutX="40" layoutY="160" text="Ghi chú:" />
        <TextArea fx:id="inputNoteField" layoutX="100" layoutY="156" prefHeight="120" prefWidth="420" />

        <Button fx:id="updateBtn" layoutX="140" layoutY="300" onAction="#updateTransaction" prefWidth="100" text="Cập nhật" />
        <Button fx:id="deleteBtn" layoutX="260" layoutY="300" onAction="#deleteTransaction" prefWidth="100" text="Xóa" />
        <Button fx:id="closeBtn" layoutX="380" layoutY="300" onAction="#closeWindow" prefWidth="100" text="Đóng" />
    </children>
</AnchorPane>
